{
  "manifest_version": 3,
  "name": "Grabby",
  "version": "1.0.0",
  "description": "Smart 3D model file downloader with custom naming",
  
  "permissions": [
    "storage",
    "webRequest",
    "downloads",
    "scripting"
  ],
  
  "host_permissions": [
    "*://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Grabby - 3D Model Downloader",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [{
    "resources": ["page-hook.js"],
    "matches": ["<all_urls>"]
  }],
  
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}